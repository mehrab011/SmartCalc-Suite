<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/gpasp"
    tools:context=".MainActivity3">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:src="@drawable/bg"
        android:text="CGPA/GPA Calculator"
        android:textColor="#000B13"


        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/spbtn1"
        android:layout_width="196dp"
        android:layout_height="53dp"
        android:layout_marginBottom="96dp"
        android:width="40dp"
        android:height="90dp"

        android:background="#F7787A87"
        android:text="GET STARTED"
        android:textColor="#F8F5F5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.442" />

    <Button
        android:id="@+id/chart"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:background="#F7787A87"
        android:text="GPA Chart"

        app:layout_constraintBottom_toTopOf="@+id/spbtn1"
        app:layout_constraintEnd_toStartOf="@+id/works"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.882"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/works"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:background="#F7787A87"
        android:text="How it Works?"
        app:layout_constraintBottom_toTopOf="@+id/spbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chart"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.882"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>