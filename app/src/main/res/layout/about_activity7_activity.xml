<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".ui.main.AboutActivity7Fragment">

    <TextView
        android:id="@+id/about1"
        android:layout_width="386dp"
        android:layout_height="421dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Hello! \nI am Mehrab.I am studying Computer Science and Engineering at Bangamata Sheikh Fazilatunnesa Mujib University of Science and Technology.I have been working with Android apps for the last six months.Also, I am practicing better Java programming language and UI design to develop my skills.
My favorite hobbies are traveling, gaming and
Watching thriller movies.Everyone will pray so that I can reach the goal.  Thank You! "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="408dp"
        android:layout_height="208dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/myimg"
        app:layout_constraintBottom_toTopOf="@+id/about1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>